	<context-param>
		<param-name>
			javax.servlet.jsp.jstl.fmt.localizationContext
		</param-name>
		<param-value>i18n/messages</param-value>
	</context-param>
	
	<welcome-file-list>
		<welcome-file>/index.jsp</welcome-file>
	</welcome-file-list>
	
	
	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>
	
	<!--
